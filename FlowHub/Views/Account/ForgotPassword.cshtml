@model FlowHub.Models.ForgotPasswordViewModel
@{
	ViewBag.Title = "FlowHub";
	ViewBag.Type = "auth";
	Layout = "~/Views/Shared/_Landing.cshtml";
}

<div class="sign-container">
	@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form" }))
	{
		@Html.AntiForgeryToken()
		<h1>Forgot your <strong>password?</strong></h1>
		<p>Enter your email address below and we'll get you back on track</p>
		<div class="form-group">
			@Html.LabelFor(m => m.Email)
			@Html.TextBoxFor(m => m.Email, new { placeholder = "johnsmith@mail.com" })
			@Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation-error-message" })
		</div>
		<span><a href="@Url.Action("Login", "Account")" class="url-default">Back to Sign in</a></span>
		<input type="submit" value="Request reset link" class="btn btn-bolded btn-medium btn-default">
	}
</div>

@section Scripts {
	@Scripts.Render("~/bundles/validate")
	@Scripts.Render("~/dist/js/adapt.js")
}
